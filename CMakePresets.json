{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "inherits": "x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "description": "Use Ninja with default settings",
            "binaryDir": "${sourceDir}/out/${presetName}"
          },
          {
            "name": "optimise",
            "inherits": "default",
            "description": "Optimised build configuration",
            "cacheVariables": {
              "MODE": "OPTIMISE"
            }
          },
          {
            "name": "profile",
            "inherits": "default",
            "description": "Profile build configuration",
            "cacheVariables": {
              "MODE": "PROFILE"
            }
          },
          {
            "name": "debug",
            "inherits": "default",
            "description": "Debug build configuration",
            "cacheVariables": {
              "MODE": "DEBUG"
            }
          }
    ],
    "buildPresets": [
      {
        "name": "optimise",
        "configurePreset": "optimise"
      },
      {
        "name": "profile",
        "configurePreset": "profile"
      },
      {
        "name": "debug",
        "configurePreset": "debug"
      }
    ]
}
